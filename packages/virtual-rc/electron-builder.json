{
  "appId": "com.collmot.skybrush.vrc",
  "productName": "Skybrush Virtual RC",

  "files": [
    {
      "filter": ["assets/**/*", "!node_modules"]
    },
    {
      "from": "build",
      "filter": [
        "*.bundle.js",
        "index.html",
        "*.png",
        "*.ttf",
        "*.woff",
        "*.woff2"
      ]
    }
  ],

  "linux": {
    "category": "Utility",
    "target": "AppImage"
  },

  "mac": {
    "category": "public.app-category.utilities",
    "target": "dmg"
  },

  "win": {
    "target": "portable"
  }
}
