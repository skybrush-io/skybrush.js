{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "jsx": "react",
    "target": "es2022",
    "module": "es2015",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "sourceMap": true
  },
  "exclude": [
    "**/.*/",
    "**/dist",
    "**/node_modules",
    "packages/aframe-components",
    "packages/app-theme-material-ui",
    "packages/electron-app-framework",
    "packages/mavlink",
    "packages/mui-components/lib"
  ]
}
