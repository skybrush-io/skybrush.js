{
  "name": "skybrush",
  "version": "0.0.0",
  "description": "Skybrush - The next-generation drone light show software suite",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@ava/babel": "^2.0.0",
    "@ava/typescript": "^4.0.0",
    "@babel/core": "^7.22.5",
    "@babel/eslint-parser": "^7.22.5",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-react": "^7.22.5",
    "@babel/register": "^7.22.5",
    "@types/node": "^20.3.1",
    "ava": "^5.3.1",
    "commander": "^11.0.0",
    "core-js": "^3.31.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-xo": "^0.43.1",
    "eslint-config-xo-react": "^0.27.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-ava": "^14.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unicorn": "^47.0.0",
    "git-revision-webpack-plugin": "^5.0.0",
    "html-webpack-plugin": "^5.5.3",
    "lerna": "^7.0.2",
    "listr": "^0.14.3",
    "nyc": "^15.1.0",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsd": "^0.28.1",
    "typescript": "^5.1.3",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "webpack-merge": "^5.9.0",
    "webpack-shell-plugin-next": "^2.3.1",
    "xo": "^0.54.2"
  },
  "scripts": {
    "lint": "xo",
    "test": "nyc ava && xo",
    "symlink-bins": "lerna exec \"rm -rf node_modules/.bin ; mkdir -p node_modules ; ln -s ../../../node_modules/.bin node_modules/.bin\""
  },
  "ava": {
    "require": [
      "@babel/register"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "jsxSingleQuote": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "xo": {
    "extends": "xo-react",
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx"
          ]
        },
        "typescript": {}
      }
    },
    "env": [
      "browser",
      "node"
    ],
    "prettier": true,
    "space": true,
    "ignores": [
      "packages/mavlink/lib/dialects",
      "packages/mavlink/lib/vendor",
      "packages/show-format/lib/bezier.js",
      "packages/**/test/dummy.test.js",
      "packages/**/webpack/*.config.js"
    ],
    "rules": {
      "capitalized-comments": 0,
      "no-negated-condition": 0,
      "no-warning-comments": 0,
      "ava/no-ignored-test-files": 0,
      "import/extensions": 0,
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "**/*.test.js",
            "**/*.test.jsx",
            "**/*.test.ts",
            "**/*.test.tsx"
          ]
        }
      ],
      "import/no-named-as-default": 0,
      "import/no-unresolved": [
        2,
        {
          "commonjs": true,
          "ignore": [
            "^~/"
          ]
        }
      ],
      "import/order": 0,
      "n/file-extension-in-import": 0,
      "react/boolean-prop-naming": 0,
      "react/function-component-definition": 0,
      "react/require-default-props": 0,
      "unicorn/filename-case": 0,
      "unicorn/no-negated-condition": 0,
      "unicorn/numeric-separators-style": 0,
      "unicorn/prefer-export-from": 0,
      "unicorn/prefer-module": 0,
      "unicorn/switch-case-braces": 0,
      "@typescript-eslint/consistent-type-definitions": 0,
      "@typescript-eslint/naming-convention": 0
    }
  },
  "packageManager": "yarn@3.6.0",
  "resolutions": {
    "redux-persist@^6.0.0": "patch:redux-persist@npm%3A6.0.0#./.yarn/patches/redux-persist-npm-6.0.0-56dad69feb.patch"
  }
}
