{
  "name": "skybrush",
  "version": "0.0.0",
  "description": "Skybrush - The next-generation drone light show software suite",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/eslint-parser": "^7.28.5",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.28.0",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@babel/register": "^7.28.3",
    "@types/jest": "^30.0.0",
    "@types/node": "24.8.1",
    "commander": "^11.1.0",
    "core-js": "^3.47.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-xo": "^0.49.0",
    "eslint-config-xo-react": "^0.29.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-unicorn": "^62.0.0",
    "git-revision-webpack-plugin": "^5.0.0",
    "html-webpack-plugin": "^5.6.5",
    "jest": "^30.2.0",
    "lerna": "^9.0.3",
    "listr": "^0.14.3",
    "nyc": "^17.1.0",
    "prettier": "^3.7.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tsd": "^0.33.0",
    "typescript": "^5.9.3",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2",
    "webpack-merge": "^6.0.1",
    "webpack-shell-plugin-next": "^2.3.3",
    "xo": "^1.2.3"
  },
  "scripts": {
    "lint": "npx xo",
    "test": "npx jest && npx xo",
    "symlink-bins": "lerna exec \"rm -rf node_modules/.bin ; mkdir -p node_modules ; ln -s ../../../node_modules/.bin node_modules/.bin\""
  },
  "prettier": {
    "bracketSpacing": true,
    "jsxSingleQuote": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "xo": {
    "extends": "xo-react",
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx"
          ]
        },
        "typescript": {}
      }
    },
    "env": [
      "browser",
      "node"
    ],
    "prettier": true,
    "space": true,
    "ignores": [
      "packages/mavlink/lib/dialects",
      "packages/mavlink/lib/vendor",
      "packages/show-format/lib/bezier.js",
      "packages/**/test/dummy.test.cjs",
      "packages/**/webpack/*.config.js"
    ],
    "rules": {
      "capitalized-comments": 0,
      "no-negated-condition": 0,
      "no-warning-comments": 0,
      "import/extensions": 0,
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "**/*.test.js",
            "**/*.test.jsx",
            "**/*.test.ts",
            "**/*.test.tsx"
          ]
        }
      ],
      "import/no-named-as-default": 0,
      "import/no-unresolved": [
        2,
        {
          "commonjs": true,
          "ignore": [
            "^~/"
          ]
        }
      ],
      "import/order": 0,
      "n/file-extension-in-import": 0,
      "react/boolean-prop-naming": 0,
      "react/function-component-definition": 0,
      "react/require-default-props": 0,
      "unicorn/filename-case": 0,
      "unicorn/no-negated-condition": 0,
      "unicorn/numeric-separators-style": 0,
      "unicorn/prefer-export-from": 0,
      "unicorn/prefer-module": 0,
      "unicorn/switch-case-braces": 0,
      "@typescript-eslint/consistent-type-definitions": 0,
      "@typescript-eslint/naming-convention": 0
    }
  },
  "packageManager": "yarn@3.6.0",
  "resolutions": {
    "redux-persist@^6.0.0": "patch:redux-persist@npm%3A6.0.0#./.yarn/patches/redux-persist-npm-6.0.0-56dad69feb.patch"
  }
}
