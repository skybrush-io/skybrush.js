{
  "name": "skybrush",
  "version": "0.0.0",
  "description": "Skybrush - The next-generation drone light show software suite",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@ava/babel": "^2.0.0",
    "@babel/core": "^7.14.6",
    "@babel/eslint-parser": "^7.14.7",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-decorators": "^7.14.5",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-react": "^7.14.5",
    "@material-ui/core": "^4.12.1",
    "aframe": "^1.2.0",
    "ava": "^3.15.0",
    "babel-loader": "^8.2.2",
    "commander": "^8.0.0",
    "dotenv-webpack": "^7.0.3",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-xo": "^0.37.0",
    "eslint-config-xo-react": "^0.25.0",
    "eslint-plugin-ava": "^12.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-unicorn": "^34.0.1",
    "git-revision-webpack-plugin": "^5.0.0",
    "html-webpack-plugin": "^5.3.2",
    "lerna": "^4.0.0",
    "listr": "^0.14.3",
    "nyc": "^15.1.0",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "webpack": "^5.43.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^4.0.0-beta.3",
    "webpack-merge": "^5.8.0",
    "webpack-shell-plugin-next": "^2.2.2",
    "xo": "0.39.1"
  },
  "scripts": {
    "lint": "xo",
    "test": "nyc ava && xo",
    "symlink-bins": "lerna exec \"rm -rf node_modules/.bin ; mkdir -p node_modules ; ln -s ../../../node_modules/.bin node_modules/.bin\""
  },
  "prettier": {
    "bracketSpacing": true,
    "jsxSingleQuote": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "xo": {
    "extends": "xo-react",
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      }
    },
    "env": [
      "browser",
      "node"
    ],
    "prettier": true,
    "space": true,
    "ignores": [
      "packages/mavlink/lib/dialects",
      "packages/mavlink/lib/vendor",
      "packages/show-format/lib/bezier.js",
      "packages/**/test/dummy.test.js",
      "packages/**/webpack/*.config.js"
    ],
    "rules": {
      "capitalized-comments": 0,
      "no-negated-condition": 0,
      "no-warning-comments": 0,
      "unicorn/filename-case": 0,
      "import/extensions": 0,
      "import/no-named-as-default": 0,
      "import/no-unresolved": [
        2,
        {
          "commonjs": true,
          "ignore": [
            "^~/"
          ]
        }
      ],
      "node/file-extension-in-import": 0,
      "react/boolean-prop-naming": 0,
      "react/require-default-props": 0
    }
  }
}
